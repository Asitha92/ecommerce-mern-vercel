{
	"version": 2,
	"builds": [
		{
			"src": "server.js",
			"use": "@vercel/node"
		}
	],
	"routes": [{ "src": "/(.*)", "dest": "server.js" }],
	"rewrites": [
		{
			"source": "/api/:path*",
			"destination": "/api/:path*"
		}
	],
	"redirects": [
		{
			"source": "/old-route",
			"destination": "/new-route",
			"permanent": true
		}
	],
	"headers": [
		{
			"source": "/static/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		}
	],
	"env": {
		"NEXT_PUBLIC_API_BASE_URL": "https://ecommerce-mern-vercel-self.vercel.app",
		"NODE_ENV": "production"
	},
	"functions": {
		"api/**/*.js": {
			"memory": 128,
			"maxDuration": 10
		}
	}
}
