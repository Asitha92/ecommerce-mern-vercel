{
	"version": 2,
	"builds": [
		{
			"src": "package.json",
			"use": "@vercel/next"
		}
	],
	"rewrites": [
		{
			"source": "/api/:path*",
			"destination": "/api/:path*"
		}
	],
	"redirects": [
		{
			"source": "/old-route",
			"destination": "/new-route",
			"permanent": true
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Custom-Header",
					"value": "MyValue"
				},
				{
					"key": "Cache-Control",
					"value": "public, max-age=3600"
				}
			]
		}
	],
	"cleanUrls": true,
	"trailingSlash": false
}
